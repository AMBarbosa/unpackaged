randomPoints <- function(xrange = 2, yrange = 3, n = 10) {
  # Check inputs
  if (xrange <= 0 || yrange <= 0 || n <= 0) {
    stop("xrange, yrange, and number of points must be positive values.")
  }

  # Calculate random window extent
  xmin <- runif(1, -180, 180 - xrange)
  ymin <- runif(1, -90, 90 - yrange)
  xmax <- xmin + xrange
  ymax <- ymin + yrange

  # Generate random points within the extent
  x_coords <- runif(n, xmin, xmax)
  y_coords <- runif(n, ymin, ymax)

  # Create a SpatVector of points
  points_vect <- vect(cbind(x_coords, y_coords), type = "points", crs = "+proj=longlat +datum=WGS84")

  # Return the points
  return(points_vect)
}
